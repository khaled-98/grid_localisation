<launch>

    <arg name="bag_dir" default="/home/khaled/dataset" />
    <arg name="file" default="2012-01-18-09-09-07.bag" />

    <node pkg="tf" type="tf_remap" name="tf_remapper_cpp" output="screen">
        <rosparam param="mappings"> [{old: /odom_combined, new: /odom}] </rosparam>
    </node>

    <node pkg="rosbag" type="play" name="player" output="screen" args="--clock $(arg bag_dir)/$(arg file)">
        <remap from="tf" to="tf_old" />
    </node>
</launch>